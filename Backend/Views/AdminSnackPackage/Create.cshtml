@model Backend.Models.SnackPackage

<h2 class="text-center mt-4">Thêm Gói Snack Mới</h2>

<div class="container mt-4">
    <form asp-action="Create" method="post" enctype="multipart/form-data" class="border p-4 rounded shadow-sm bg-light">
        @Html.AntiForgeryToken()

        <!-- Tên Gói, Giá, Số Lượng -->
        <div class="row g-3">
            <div class="col-md-4">
                <label asp-for="Name" class="form-label">Tên Gói Snack</label>
                <input asp-for="Name" class="form-control" placeholder="Nhập tên gói snack..." />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="col-md-4">
                <label asp-for="Price" class="form-label">Giá (VNĐ)</label>
                <input asp-for="Price" class="form-control" type="number" step="0.01" placeholder="Nhập giá gói snack..." />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="col-md-4">
                <label asp-for="Quantity" class="form-label">Số Lượng</label>
                <input asp-for="Quantity" class="form-control" type="number" placeholder="Nhập số lượng sản phẩm trong gói..." />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
        </div>

        <!-- Hình Ảnh -->
        <div class="row g-3 mt-3">
            <div class="col-md-6">
                <label class="form-label">Hình Ảnh Gói Snack</label>
                <input type="file" name="ImageFile" class="form-control" onchange="previewImage(event)" accept="image/*" />
                <div class="mt-2">
                    <img id="imagePreview" src="#" alt="Image Preview" style="display:none; width: 150px; height: 150px; object-fit: cover; border: 1px solid #ddd; border-radius: 5px;" />
                </div>
            </div>
        </div>

        <!-- Mô Tả -->
        <div class="row g-3 mt-3">
            <div class="col-12">
                <label asp-for="Description" class="form-label">Mô Tả Gói Snack</label>
                <textarea asp-for="Description" class="form-control" rows="4" placeholder="Nhập mô tả chi tiết..."></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>

        <!-- Nút Lưu -->
        <div class="mt-4 d-flex justify-content-center">
            <button type="submit" class="btn btn-primary w-45 me-3">Lưu</button>
            <a asp-action="Index" class="btn btn-secondary w-45">Hủy</a>
        </div>
    </form>
</div>

<!-- JavaScript -->
<script>
    function previewImage(event) {
        const imagePreview = document.getElementById('imagePreview');
        imagePreview.src = URL.createObjectURL(event.target.files[0]);
        imagePreview.style.display = 'block';
    }
</script>
